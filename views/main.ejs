<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>乐享食间</title>
    <link rel="stylesheet" type="text/css" href="../public/stylesheets/nav.css">
    <link rel="stylesheet" type="text/css" href="../public/font/iconfont.css">
    <link rel="stylesheet" type="text/css" href="../public/stylesheets/mian.css">
    <script type="text/javascript" src="../public/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="../public/javascripts/nav.js"></script>
</head>
<body>
<!--左边导航栏部分-->
<div class="nav">
    <div class="nav-top">
        <div id="mini" style="border-bottom:1px solid rgba(255,255,255,.1)"><img src="../public/images/mini.png"></div>
    </div>
    <ul>
        <li class="nav-item" id="recipeMag">
            <a href="javascript:;"><i class="my-icon nav-icon icon_1"></i><span>菜谱管理</span><i
                        class="my-icon nav-more"></i></a>
            <ul>
                <li><a href="javascript:;"><span>发表菜谱</span></a></li>
                <li><a href="javascript:;"><span>审核菜谱</span></a></li>
            </ul>
        </li>
        <li class="nav-item" id="articleMag">
            <a href="javascript:;"><i class="my-icon nav-icon icon_2"></i><span>文章管理</span><i
                        class="my-icon nav-more"></i></a>
            <ul>
                <li><a href="javascript:;"><span>发表文章</span></a></li>
            </ul>
        </li>
        <li class="nav-item" id="activityMag">
            <a href="javascript:;"><i class="my-icon nav-icon icon_3"></i><span>活动管理</span><i
                        class="my-icon nav-more"></i></a>
            <ul>
                <li><a href="javascript:;"><span>发表活动</span></a></li>
                <li><a href="javascript:;"><span>评选获奖菜谱</span></a></li>
            </ul>
        </li>
    </ul>
</div>
<!--中间内容显示部分-->
<div id="mian">
    <div class="center">
        <li class="item1"><%- include("./publishRecipe.ejs") %></li>
        <li class="item2 myhidden"><%- include("./auditRecipes.ejs") %></li>
        <li class="item3 myhidden"><%- include("./publishArticle.ejs") %></li>
        <li class="item4 myhidden"><%- include("./publicActivity.ejs") %></li>
        <li class="item5 myhidden"><%- include("./selectionRecipes.ejs") %></li>
    </div>
</div>
<script>
    $("#recipeMag li:first-child").click(function () {
        $(".center li").hide();
        $(".center .item1").show();
    });
    $("#recipeMag li:last-child span").click(function () {
        $(".center li").hide();
        $(".center .item2").show();
    });
    $("#articleMag li:first-child").click(function () {
        $(".center li").hide();
        $(".center .item3").show();
    });
    $("#activityMag li:first-child").click(function () {
        $(".center li").hide();
        $(".center .item4").show();
    });
    $("#activityMag li:last-child").click(function () {
        $(".center li").hide();
        $(".center .item5").show();
    });
    $(".center li").height($(window).height())
</script>
</body>
</html>